<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp.FirstPage"
             BackgroundColor="Gray">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label Text="This is the very first page created with Xaml." HorizontalOptions="CenterAndExpand"></Label>
    <Button Text="Create Database" Clicked="OnCreateClicked"></Button>
    <Button Text="Encrypt database" Clicked="OnEncryptClicked"></Button>
    <Button Text="Read encrypted database" Clicked="OnEncryptReadClicked"></Button>
  </StackLayout>
</ContentPage>